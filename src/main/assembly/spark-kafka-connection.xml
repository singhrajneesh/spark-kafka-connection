<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>spark-kafka-connection</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/sql</directory>
            <outputDirectory>sql</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/hive</directory>
            <outputDirectory>hive</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/data</directory>
            <outputDirectory>data</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/logs</directory>
            <outputDirectory>logs</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/schema</directory>
            <outputDirectory>schema</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/scripts</directory>
            <outputDirectory>scripts</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>jars</outputDirectory>
            <fileMode>775</fileMode>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>